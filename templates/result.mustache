{{!
    @template block_emotionanalysis/results
    Example context (json):
    {

    }
}}
<input type="hidden" id="UsedIdVal" value="{{UserId}}">
<div class="container">
    <div class="row">
        <div class="col text-center">
            <label for="coursedetails">{{CourseElementLabel}}</label>
            <select class="form-control" name="coursedetails" id="course-select" >
                <option value="">Please select a course</option>
            </select>
        </div>
        <div class="col text-center">
            <label for="videodetails">{{VideoElementLabel}}</label>
            <select class="form-control" name="videodetails" id="video-select">
                <option value="">Please select a Lecture</option>
            </select>
        </div>
        <div class="col text-center">
            <label for="userdetails">{{UserElementLabel}}</label>
            <select class="form-control" name="userdetails" id="user-select" >
                <option value="">Please select a user</option>
            </select>
        </div>
        <div class="col text-center">
            <label for="charttype">Chart Type</label>
            <select class="form-control" name="chartType" id="chartType" >
                <option value="">Please Select Chart type</option>
                <option value="bar">Bar</option>
                <option value="doughnut">Doughnut</option>
                <option value="pie">Pie</option>
            </select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col text-center">
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary btn-block" type="button" id="submit-button" >Submit</button>
                </div>
                <div class="col">
                    <button class="btn btn-danger btn-block" id="reset-button" type="button">Reset</button>
                </div>
                <div class="col">
                    <button class="btn btn-danger btn-block" id="delete-button" type="button" disabled>Delete Record</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            <table class="table table-striped table-bordered" id="additional-information"></table>
        </div>
        <div class="col-6 ">
            <canvas id="schart"></canvas>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div id="emotion-container">
                <div id="info-display" class="info-display"></div>
                <div id="data-container">
                </div>
            </div>
        </div>
    </div>
</div>